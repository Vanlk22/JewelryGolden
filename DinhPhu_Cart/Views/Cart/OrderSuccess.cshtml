@model JewelryGolden.Models.Order
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-body py-5">
                    <div class="success-icon mb-4">
                        <i class="fas fa-check-circle text-success"></i>
                    </div>
                    
                    <h2 class="text-success mb-3">Đặt hàng thành công!</h2>
                    <p class="lead mb-4">Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi.</p>
                    
                    <div class="order-info bg-light p-4 rounded mb-4">
                        <h5 class="mb-3">Thông tin đơn hàng</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Mã đơn hàng:</strong> #@Model.ID</p>
                                <p><strong>Ngày đặt:</strong> @Model.CreatedDate</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                                <p><strong>SĐT:</strong> @Model.CustomerMobile</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <p><strong>Địa chỉ giao hàng:</strong> @Model.CustomerAddress</p>
                                <p><strong>Phương thức thanh toán:</strong> 
                                    @switch(Model.PaymentMethod)
                                    {
                                        case "cod":
                                            <span class="badge bg-warning">Thanh toán khi nhận hàng</span>
                                            break;
                                        case "bank_transfer":
                                            <span class="badge bg-info">Chuyển khoản ngân hàng</span>
                                            break;
                                        case "credit_card":
                                            <span class="badge bg-primary">Thẻ tín dụng</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.PaymentMethod</span>
                                            break;
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="next-steps mb-4">
                        <h5>Bước tiếp theo:</h5>
                        <div class="row text-start">
                            <div class="col-md-4">
                                <div class="step-item p-3 border rounded">
                                    <i class="fas fa-clock text-primary mb-2"></i>
                                    <h6>Xác nhận đơn hàng</h6>
                                    <small class="text-muted">Chúng tôi sẽ liên hệ xác nhận trong vòng 30 phút</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-item p-3 border rounded">
                                    <i class="fas fa-truck text-success mb-2"></i>
                                    <h6>Giao hàng</h6>
                                    <small class="text-muted">Thời gian giao hàng: 1-3 ngày làm việc</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="step-item p-3 border rounded">
                                    <i class="fas fa-handshake text-warning mb-2"></i>
                                    <h6>Hoàn tất</h6>
                                    <small class="text-muted">Nhận hàng và thanh toán (nếu COD)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="action-buttons">
                        <a href="@Url.Action("Invoice", new { orderId = Model.ID })" class="btn btn-primary me-2">
                            <i class="fas fa-file-invoice"></i> Xem hóa đơn
                        </a>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-bag"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon {
        animation: bounceIn 1s ease-in-out;
        font-size: 100px; /* nhỏ hơn 5x, bạn có thể thử 50px hoặc 40px */
    }
    
    @@keyframes bounceIn {
        0% {
            transform: scale(0.3);
            opacity: 0;
        }
        50% {
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.9);
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    .step-item {
        transition: transform 0.2s ease-in-out;
    }
    
    .step-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .order-info {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border: none;
    }
</style>
