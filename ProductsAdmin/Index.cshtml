<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Quản lý /</span> Sản phẩm
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách sản phẩm</h5>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i> Thêm sản phẩm
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Giá KM</th>
                        <th>Trạng thái</th>
                        <th>Hot</th>
                        <th>Trang chủ</th>
                        <th>Lượt xem</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="@item.Image" alt="@item.Name" class="rounded" width="50" height="50" />
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <i class="bx bx-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@item.Name</strong>
                                @if (!string.IsNullOrEmpty(item.Alias))
                                {
                                    <br />
                                    <small class="text-muted">@item.Alias</small>
                                }
                            </td>
                            <td>
                                @if (item.ProductCategory != null)
                                {
                                    <span class="badge bg-label-primary">@item.ProductCategory.Name</span>
                                }
                            </td>
                            <td>
                                <strong>@item.Price.ToString("N0") ₫</strong>
                            </td>
                            <td>
                                @if (item.PromotionPrice.HasValue)
                                {
                                    <span class="text-success">@item.PromotionPrice.Value.ToString("N0") ₫</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-label-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger">Tạm dừng</span>
                                }
                            </td>
                            <td>
                                @if (item.HotFlag)
                                {
                                    <span class="badge bg-label-warning">
                                        <i class="bx bx-star me-1"></i>Hot
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.HomeFlag)
                                {
                                    <span class="badge bg-label-info">
                                        <i class="bx bx-home me-1"></i>Hiển thị
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-label-secondary">@(item.ViewCount ?? 0)</span>
                            </td>
                            <td>
                                @if (item.CreatedDate.HasValue)
                                {
                                    <small>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</small>
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Details", new { id = item.ID })">
                                            <i class="bx bx-show me-1"></i> Xem chi tiết
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.ID })">
                                            <i class="bx bx-edit-alt me-1"></i> Chỉnh sửa
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", new { id = item.ID })">
                                            <i class="bx bx-trash me-1"></i> Xóa
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>

