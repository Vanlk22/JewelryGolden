@model JewelryGolden.Models.ApplicationUser

@{
    ViewBag.Title = "Chỉnh sửa người dùng";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin người dùng
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "UserAdmin", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>Cập nhật thông tin người dùng: <strong>@Model.UserName</strong></div>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user me-1"></i>Tên đăng nhập
                            <span class="text-danger">*</span>
                        </label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên đăng nhập", required = "required" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-envelope me-1"></i>Email
                            <span class="text-danger">*</span>
                        </label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "example@email.com", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-phone me-1"></i>Số điện thoại
                        </label>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", type = "tel", placeholder = "0xxxxxxxxx" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-lock me-1"></i>Mật khẩu mới
                        </label>
                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Để trống nếu không muốn thay đổi" } })
                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger small" })
                        <small class="text-muted">Chỉ nhập mật khẩu nếu bạn muốn thay đổi</small>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-primary">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Cập nhật
                            </button>
                        </div>
                    </div>
                } <!-- End Form -->
            </div> <!-- End Card Body -->
        </div> <!-- End Card -->
    </div> <!-- End Column -->
</div> <!-- End Row -->
