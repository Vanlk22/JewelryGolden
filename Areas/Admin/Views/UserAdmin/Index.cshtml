@model IEnumerable<JewelryGolden.Models.ApplicationUser>

@{
    ViewBag.Title = "Quản lý người dùng";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-users me-2"></i>Danh sách người dùng</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        <!-- Search Box -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm theo tên, email, số điện thoại...">
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-primary">
                    <i class="fas fa-users me-1"></i> Tổng số: @Model.Count() người dùng
                </span>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover" id="userTable">
                <thead>
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 20%">
                            <i class="fas fa-user me-1"></i>Tên đăng nhập
                        </th>
                        <th style="width: 25%">
                            <i class="fas fa-envelope me-1"></i>Email
                        </th>
                        <th style="width: 15%">
                            <i class="fas fa-phone me-1"></i>Số điện thoại
                        </th>
                        <th style="width: 10%">
                            <i class="fas fa-shield-alt me-1"></i>Vai trò
                        </th>
                        <th style="width: 15%" class="text-center">
                            <i class="fas fa-cog me-1"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted">@index</td>
                            <td>
                                <strong>@item.UserName</strong>
                            </td>
                            <td>
                                <i class="fas fa-envelope text-muted me-1"></i>
                                @item.Email
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                {
                                    <i class="fas fa-phone text-muted me-1"></i>
                                    @item.PhoneNumber
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-user-shield me-1"></i>Admin
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons justify-content-center">
                                    <a href="@Url.Action("Details", new { id = item.Id })"
                                       class="btn btn-sm btn-primary"
                                       title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.Id })"
                                       class="btn btn-sm btn-warning"
                                       title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })"
                                       class="btn btn-sm btn-danger"
                                       title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có người dùng nào trong hệ thống</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Thêm người dùng mới
                </a>
            </div>
        }
    </div>
</div>
